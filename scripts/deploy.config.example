# NawBio 배포 설정 파일
# scripts/deploy.config 로 복사해서 사용하세요
# cp scripts/deploy.config.example scripts/deploy.config

# EC2 설정
EC2_HOST="your-ec2-public-ip"
EC2_USER="ec2-user"
SSH_KEY="~/.ssh/your-aws-key.pem"

# 백엔드 설정
BACKEND_REMOTE_DIR="/home/ec2-user"
JAR_NAME="nawbio-api.jar"

# 프론트엔드 설정
FRONTEND_REMOTE_DIR="/var/www/nawbio-web/build"

# 백업 설정
BACKUP_ENABLED="true"
BACKUP_DIR="/home/ec2-user/backups"
MAX_BACKUPS="5"  # 최대 백업 개수

# 알림 설정 (선택)
SLACK_WEBHOOK_URL=""
DISCORD_WEBHOOK_URL=""

# 환경변수 (운영 환경)
# 주의: 실제 secret은 EC2 환경변수로 관리하세요
DB_HOST="localhost"
DB_PORT="5432"
DB_NAME="nawbio"
